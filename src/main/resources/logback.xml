<configuration>

    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %c{15} - %msg%n%rEx</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE_APPENDER" />
    </root>
</configuration>
